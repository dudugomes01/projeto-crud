<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head.ejs') %>
<body>
    
  <%- include('partials/navbar.ejs')%>
  
  <% if(typeof message !== 'undefined') { %>
    <%= message %>
    <%} %>
    <h2>Editar Cliente</h2>
    <form action="/edit/<%= user._id %> " method="POST">
        <div>
          <label>Nome</label>
          <input type="text"name="name"placeholder="Digite seu nome" value="<%= user.name %> ">
        </div>
        <div>
          <label>Idade</label>
          <input type="text"name="age"placeholder="Digite sua idade" value="<%= user.age %> ">
        </div>
        <div>
          <label>E-mail</label>
          <input type="text"name="email"placeholder="Digite seu e-mail" value="<%= user.email %> ">
        </div>
        <button type="submit">Editar</button>
      </form>
   
    <%- include('partials/foot.ejs') %>
</body>
</html>